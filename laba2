void laba_2() {
  puts("Введите число:");
	scanf("%d", &n);

	printf("%d\n%f", n, n / 333.);



	int n = 16, k = 2;
	printf("Сейчас %d часов %d минут 00 секунд\n", n, k);
	printf("Идет %d минута суток\n", n * 60 + k);
	printf("До полуночи осталось %d часов и %d минут\n", 24 - n + 1, 60 - k);
	printf("C 8.00 прошло %d секунд\n", (n - 8) * 3600 + k * 60);
	printf("Текущий час = %d/24 суток и текущая минута = %d/60 часа", n, k);


	int num = 2;
	printf("1:\nМоя\n%d\nпрограмма\n\n", num);

	printf("2:\n");
	printf("%20s \n", "Это текст");
	printf("3:\n\tЭто текст\n\n");

	printf("4:\n%10.3f\n", 12.234657);
	printf("5:\n%10.5f\n", 12.234657);

	printf("6:\nОстаток от деления %d на %d равен %d \n", 5, 2, 5 % 2);

	printf("\n7:Целая часть при делении %d на %d равна %d, а остаток равен %d\n", 7, 5, 7 / 5, 7 % 5);
	printf("При умножении %d на %d получится %d\n\n", 2000, 4, 2000 * 4);

	printf("8:\n%g разделить на %e равно %f\n", 5., 2., 5. / 2);

	printf("9: \n тут все %g разделить на %e равно %f\n", 5., 2., 5. / 2);
	printf("\n тут d %d разделить на %d равно %d\n", 5., 2., 5. / 2);
	printf("\n тут f %.2f разделить на %.2f равно %.2f\n", 5., 2., 5. / 2);
	printf("%.2f получается при делении %.2f на %.2f", 5. / 2, 5., 2.);
	printf("\n тут g %g разделить на %g равно %g\n", 5., 2., 5. / 2);
	printf("\n тут e %e разделить на %e равно %e\n", 5., 2., 5. / 2);

}
