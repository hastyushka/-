void main() {
	setlocale(LC_ALL, "RUS");
	//1
	char c;
	int i;
	float f;
	double d;
	printf("Введите символ:");
	scanf("%c", &c);
	printf("Введите целое число:");
	scanf("%d", &i);
	printf("Введите float:");
	scanf("%f", &f);
	printf("Введите double:");
	scanf("%lf", &d);
	printf("%c %d %f %lf", c, i, f, d);


	//2
	int a = 11, b = 3;
	int x = a / b;
	float y = a / b;
	double z = a / b;
	printf("x = %d, y = %f, z = %lf", x, y, z);

