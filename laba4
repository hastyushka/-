	printf("Введите трехзначное число:");
	scanf("%d", &x);
	x = abs(x);
	int a, b, c;
	a = x % 10;
	b = (x / 10) % 10;
	c = x / 100;
	printf("Первая цифра числа %d, последняя цифра числа %d, сумма цифр числа %d\n", c, a, a + b + c);
	printf("Число наоборот - %d", 100 * a + 10 * b + c);

	//индивидуальное
	float amount;
	puts("Введите количество квартов:");
	scanf("%f", &amount);
	printf("Количество молекул в %f квартов - %f", amount, amount * quart / mass);

}
