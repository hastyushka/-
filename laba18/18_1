#define _CRT_SECURE_NO_DEPRECATE

#include <stdio.h>
#include <locale.h>
#include <math.h>
#include <stdlib.h>

struct point {
	float x;
	float y;
	char name;
};

typedef struct point Point;

int main() {
	setlocale(LC_ALL, "RUS");

	Point w, z, b, a;

	a = (Point){ 1.f, 2.f, 'A' };
	b.name = 'B'; b.x = 5; b.y = -3;
	z.name = 'Z'; 
	puts("Введите х и у для точки z:");
	scanf("%f%f", &z.x, &z.y);
	w.name = 'W';
	puts("Введите х и у для точки w:");
	scanf("%f%f", &w.x, &w.y);

	printf("point %c (%.1f, %.1f)\n", b.name, b.x, b.y);

	put_point(z);

	dist(z, w);
}

int put_point(Point z) {

	printf("point %c (%.1f, %.1f)\n", z.name, z.x, z.y);
}

float dist(Point z, Point w) {
	Point a, m;
	a = (Point){ 1.f, 2.f, 'A' };
	m.name = 'M';
	m.x = (z.x + w.x)/2;
	m.y = (z.y + w.y) / 2;
	printf("Середина между точками %c и %c - точка %c (%.1f, %.1f)\n", z.name, w.name, m.name, m.x, m.y);
}


